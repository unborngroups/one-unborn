ALTER TABLE terminations MODIFY circuit_id VARCHAR(20);

UPDATE terminations
SET status = 
    CASE
        WHEN termination_date IS NOT NULL THEN 'Terminated'
        WHEN termination_request_date IS NOT NULL THEN 'Pending'
        ELSE NULL
    END;